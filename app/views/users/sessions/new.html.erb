<section class="bg-white">
  <div class="container px-6 py-24 mx-auto lg:py-32">
    <div class="lg:flex">
      <%= render partial: "users/shared/hero_devise", locals: { action_message: 'login to your account'} %>
      <div class="mt-8 lg:w-1/2 lg:mt-0">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'w-full lg:max-w-xl') do |f| %>
          <div class="">
            <%= f.label :email_address, class: "block mb-2 text-sm text-gray-800" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@example.com", class:"block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-400 rounded-lg focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" %>
          </div>
          <div class="mt-6">
            <div class="flex justify-between mb-2">
              <%= f.label :password, class: "text-sm text-gray-800"%><br />
            </div>
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "Your Password", class: "block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-400 rounded-lg focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" %>
          </div>
          <div class="mt-8 md:flex md:items-center">
            <%= f.submit "Sign in", class: "w-full px-6 py-3 text-sm font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-blue-500 rounded-lg md:w-1/2 hover:bg-blue-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-50"%>
      
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: "inline-block mt-4 text-center text-blue-500 md:mt-0 md:mx-6" %>
          </div>
          <%= render "users/shared/links" %>
        <% end %>
      </div>
    </div>
  </div>
</section>

